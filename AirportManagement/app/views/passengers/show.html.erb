<!-- show.html.erb -->

<style>
  body {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    margin: 0;
  }

  table {
    margin-bottom: 20px;
    border-collapse: collapse;
    width: 80%;
  }

  th, td {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: left;
  }

  th {
    background-color: #f2f2f2;
  }

  button {
    margin-top: 10px;
  }

  .delete-button {
    background-color: #ff0000;
    color: #fff;
    border: none;
    padding: 10px;
    cursor: pointer;
    border-radius: 5px;
  }
</style>

<p style="color: green"><%= notice %></p>

<h1>Passenger Details</h1>

<table>
  <thead>
    <tr>
      <th>Check-in</th>
      <th>Name</th>
      <th>Aircraft</th>
      <th>Destination</th>
      <th>Gate</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @passenger.checkIn ? 'Yes' : 'No' %></td>
      <td><%= @passenger.name %></td>
      <td><%= @passenger.aircraft %></td>
      <td><%= @passenger.destination %></td>
      <td><%= @passenger.gate %></td>
    </tr>
  </tbody>
</table>

<%= link_to "Edit", edit_passenger_path(@passenger), class: "btn" %>

<%= button_to "Delete this passenger", @passenger, method: :delete, class: "delete-button", data: { confirm: "Are you sure?" } %>

<%= link_to "Back", passengers_path, class: "btn" %>
